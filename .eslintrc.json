{
  "extends": [
    "plugin:react/recommended",
    "airbnb",
    "prettier",
    "eslint-config-prettier",
    "plugin:jest/recommended",
    "plugin:jest/style",
    "plugin:@typescript-eslint/recommended",
    "plugin:react-hooks/recommended",
    "plugin:jsx-a11y/recommended",
    "plugin:import/warnings"
  ],
  "env": {
    "browser": true,
    "jest": true,
    "es2021": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "@typescript-eslint",
    "testing-library",
    "eslint-plugin-prettier"
  ],
  "ignorePatterns": ["build/"],
  "rules": {
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": ["src/app/**/*.spec.{ts,tsx}", "src/setupTests.ts"]
      }
    ],
    "prettier/prettier": [
      "warn",
      {
        "singleQuote": true,
        "semi": true
      }
    ],
    "react/jsx-filename-extension": [
      2,
      {
        "extensions": [".js", ",.jsx", ",.ts", ".tsx"]
      }
    ],
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "never",
        "ts": "never",
        "tsx": "never"
      }
    ],
    "no-use-before-define": "off",
    // https://stackoverflow.com/questions/63818415/react-was-used-before-it-was-defined
    "@typescript-eslint/explicit-module-boundary-types": "off",
    "react/prop-types": "off",
    "react/destructuring-assignment": "off",
    "jsx-a11y/click-events-have-key-events": "off",
    "@typescript-eslint/ban-ts-comment": "off"
  },
  "overrides": [
    {
      "files": ["*Provider.tsx"],
      "rules": {
        "@typescript-eslint/no-empty-function": "off" // required for the initial context
      }
    },
    {
      "files": ["*.spec.ts*"],
      "rules": {
        "@typescript-eslint/no-empty-function": "off", // required for mock functions
        "@typescript-eslint/no-non-null-assertion": "off" // testing stateful behaviour with delayed initialisation
      }
    }
  ],
  "settings": {
    "react": {
      "version": "detect"
      // Tells eslint-plugin-react to automatically detect the version of React to use
    },
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    }
  }
}
